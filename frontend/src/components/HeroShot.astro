---
const { img = "", heading, text, btn = "", phone = "", alignClass = "" } = Astro.props;
---

<div class="heroshot__container">
    <div class="heroshot__img-container">
    { img &&
    (
        <img class="heroshot__img" src={ img.src } alt={ img.alt } />
    )
    }
    </div>
    <div class={`
    heroshot__text-container
    ${alignClass}
    `}>
        <h6 class="subheading">Cyprus Sharks</h6>
        <h1 class="heroshot__heading">{ heading }</h1>
        <p class="heroshot__text" set:html={ text }/>
        <p class="heroshot__phone">{ phone }</p>
        <div class="heroshot__btn-container">
            { btn &&
            (<a class="heroshot__btn" href={ btn.href }>{ btn.text }</a> 
            ) 
            }
        </div>    
    </div>
</div>



<style>

    .heroshot__container {
        display: grid;
        grid-template-columns: 1fr;
    }

    .heroshot__img {
        margin-top: -4em;
        margin-bottom: 2em;
    }

    .heroshot__text-container {
        padding: 0 2em;
        max-width: 60em;
    }

    .heroshot__heading {
        margin-bottom: 16px;
        color: #fff;
    }


    .heroshot__text {
        margin-bottom: 42px;
        font-size: var(--fs-400);
        max-width: 60%;
    }

    .heroshot__phone {
        background-image: linear-gradient(to right, var(--second-color), var(--third-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: var(--fs-600);
        font-weight: 600;
        text-align: center;
    }

    .heroshot__btn-container {
        background: var(--third-color);
        max-width: 16em;
        display: flex;
        justify-content: center;
    }

    .heroshot__btn {
        padding: 0.6em 1em;
        color: #fff;
        text-decoration: none;
        font-weight: 400;
        transition: 0.7s;
        max-width: 16em;
    }

    .heroshot__btn-container:hover {
        background: var(--third-color);
    }



  @media only screen and (min-width: 50em) {
   
    .heroshot__align--left {
        display: flex;
        align-items: flex-start;
        margin-right: auto;
        text-align: left;
        max-width: 48%;
    }

       
    .heroshot__align--center {
        display: flex;
        align-items: center;
        margin-left: auto;
        margin-right: auto;
        align-items: center;
        text-align: center;
    }

    .heroshot__img-container {
    display: grid;
    grid-template-areas: "stack";
    place-items: center;
    }

    .heroshot__img {
        margin-top: -10em;
        margin-bottom: 0;
    }

    .heroshot__container > * {
        grid-area: stack;
    }

    .heroshot__text-container {
        display: flex;
        flex-direction: column;
        margin-top: 1%;
    }
}

    @media only screen and (min-width: 60em) {
        .heroshot__text-container {
            margin-top: 2%;
    }
    }

    @media only screen and (min-width: 80em) {
        .heroshot__text-container {
            margin-top: 8%;
    }
    }

</style>