<div class="image-animated__container">
<div class="fadein">
    <img class="img-animated" id="f3" src="/images/nicole-paddling.webp">
    <img class="img-animated" id="f2" src="/images/stella-paddling.webp">
    <img class="img-animated" id="f1" src="/images/tina-paddling.webp">
</div>
</div>

<style>
    .image-animated__container {
        max-width: 340px;
        height: 240px;
        display: grid;
        position: relative;
    }

    .fadein {
        position: absolute;
        top: -10em;
        left:0;
        padding: 2em;
    }

    .img-animated {
        max-width: 200px;
    }
    .fadein img {
        border: 4px solid #fff;
        border-radius: 2px;
    transform: rotate(8deg);
    position: absolute;
    top: 0;
    -webkit-animation-name: fade;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-duration: 10s;
    animation-name: fade;
    animation-iteration-count: infinite;
    animation-duration: 10s;
}
@-webkit-keyframes fade {
    0% {opacity: 0;}
    20% {opacity: 1;}
    33% {opacity: 1;}
    53% {opacity: 0;}
    100% {opacity: 0;}
}
@keyframes fade {
    0% {opacity: 0;}
    20% {opacity: 1;}
    33% {opacity: 1;}
    53% {opacity: 0;}
    100% {opacity: 0;}
}

#f1 {
    -webkit-animation-delay: -8s;
}

#f2 {
    -webkit-animation-delay: -6s;
}

#f3 {
    -webkit-animation-delay: -4s;
}

@media only screen and (min-width: 45em) {
    .image-animated__container {
        justify-items: center;  
        margin: 2em;
    }
    
    .img-animated {
        max-width: 240px;
    }

    .fadein {
        position: absolute;
        top: 0;
        left:0;
        padding: 2em;
    }
}

@media only screen and (min-width: 60em) {
    
    .fadein {
        position: absolute;
        top: 6em;
        left:0;
        padding: 2em;
    }
}
</style>