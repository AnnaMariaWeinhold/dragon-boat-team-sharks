<style>
    .img__grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2em;
    }

    .img__item {
        margin-bottom: 0.6em;
        border: 2px solid var(--light-color);
        border-radius: 2px;
    }

    .img__grid-title {
        font-weight: bold;
    }

    @media only screen and (min-width: 40em) {
        .img__grid {
        grid-template-columns: repeat(4, 1fr);
        margin-top: 2em;
    }

    .img__grid--first-item {
        margin-top: 4em;
    }

    .img__grid--third-item {
        margin-top: -4em;
    }

    
    .img__grid--fourth-item {
        margin-top: -6em;
    }

    }

</style>