---
const { img, title, price, href } = Astro.props;
---

<a href={href} >
<div class="product__container">
    { img &&
    (<img src={img.src} alt={img.alt} width={img.width} />)}
    <h3 class="product__heading">{ title }</h3>
    <p class="product__price">{ price }</p>
</div>
</a>

<style>
  .product__container:hover {
    border-bottom: 8px solid var(--third-color);
    transition: 0.6s;
    cursor: pointer;
    }

    .product__container {
    padding: 25px 2.6em;
    background-color: var(--light-color);
    border-bottom: 8px solid var(--light-color);
  }

  .product__heading {
    margin-top: 20px;
    color: var(--first-color);
  }

  .product__price {
    color: var(--first-color);
  }

  .arrow {
    margin-right: 4px;
  }
  
  </style>