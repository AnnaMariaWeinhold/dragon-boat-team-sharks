---
const { img, maxWidthClass = "" } = Astro.props;
---

    {img &&
    (<img src={ img.src } alt={ img.alt } class={`
        img
        ${maxWidthClass}
        `} />)
    }

    <style>
        .width--80 {
            max-width: 100%;
        }

        .img {
            margin: 0 auto;
            display: flex;
        }

        @media only screen and (min-width: 45em) {
            .width--80 {
                max-width: 80%;
            }

            .img {
            margin: 0 auto;
            display: flex;
            padding: 3em 0 0 0;
        }
        }
    </style>